<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="#FFF"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="1dp"/>

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/logo"
                    android:text="Androidwarriors "
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="#333"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/data_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titulo"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/logo"
                    android:paddingTop="5dp"
                    android:text="Place to dive into android programming"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="#555"
                    android:textSize="14dp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/context_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:text="{fa-chevron-down 150%}"
                    android:textColor="#555" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imagem"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/logo"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/evento" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/logo"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras purus enim, dapibus sed tempus eu, eleifend ut ex"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#333"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:background="@drawable/ticket_cicle_shape"
                android:gravity="left"
                android:padding="5dp"
                android:text="{fa-ticket 150%}"
                android:textColor="#fff"
                android:textSize="20dp" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/usuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/comentarios"
                android:gravity="right"
                android:padding="5dp"
                android:text="{fa-users 150%} 999k"
                android:textColor="#555"
                android:textSize="20dp" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/comentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="{fa-comment 150%} 999k"
                android:textColor="#555"
                android:textSize="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2eb187"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="{fa-thumbs-up 150%}"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="999k"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="{fa-share 150%}"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>